@page
@model GenerateRecoveryCodesModel
@{
    ViewData["Title"] = "Generate Recovery Codes";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

@section Styles {
    <link rel="stylesheet" href="~/css/accountManage/generate-recovery-codes.css" asp-append-version="true" />
}

<div class="generate-recovery-codes-page">
    <h3>@ViewData["Title"]</h3>

    <partial name="_StatusMessage" for="StatusMessage" />

    <div class="main-content">
        <!-- Warning Section -->
        <div class="warning-section">
            <div class="warning-card">
                <h4>⚠️ Important</h4>
                <p><strong>Put these codes in a safe place.</strong></p>
                <p>If you lose your device and don't have the recovery codes you will lose access to your account.</p>
            </div>

            <div class="info-card">
                <p>
                    Generating new recovery codes does not change the keys used in authenticator apps.
                    If you wish to change the key used in an authenticator app you should
                    <a asp-page="./ResetAuthenticator">reset your authenticator keys</a>.
                </p>
            </div>
        </div>

        <!-- Generation Form -->
        <div class="generation-section">
            <form method="post" class="generation-form">
                <button type="submit" class="btn btn-danger generate-btn">
                    Generate Recovery Codes
                </button>
            </form>
        </div>

        <!-- Back Link -->
        <div class="back-section">
            <a href="~/Identity/Account/Manage/TwoFactorAuthentication" class="back-link">
                ← Back to Two-Factor Authentication
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/manage/generate-recovery-codes.js" asp-append-version="true"></script>
}