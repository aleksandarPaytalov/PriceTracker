@page
@model ShowRecoveryCodesModel
@{
    ViewData["Title"] = "Recovery codes";
    ViewData["ActivePage"] = "TwoFactorAuthentication";
}

<link rel="stylesheet" href="~/css/accountManage/show-recovery-codes.css" />

<div class="recovery-codes-container">
    <partial name="_StatusMessage" for="StatusMessage" />

    <h3>@ViewData["Title"]</h3>

    <div class="alert alert-warning" role="alert">
        <p>
            <strong>Put these codes in a safe place.</strong>
        </p>
        <p>
            If you lose your device and don't have the recovery codes you will lose access to your account.
        </p>
    </div>

    <div class="recovery-instructions">
        <h5>How to use recovery codes:</h5>
        <ul>
            <li>Each code can only be used once</li>
            <li>Use them when you can't access your authenticator app</li>
            <li>Store them securely - treat them like passwords</li>
            <li>Click on any code to copy it to clipboard</li>
        </ul>
    </div>

    <div class="recovery-codes-grid">
        <div class="recovery-codes-wrapper">
            @for (var i = 0; i < Model.RecoveryCodes.Length; i++)
            {
                <code class="recovery-code"
                      title="Click to copy"
                      data-code="@Model.RecoveryCodes[i]">
                    @Model.RecoveryCodes[i]
                </code>
            }
        </div>
    </div>

    <div class="recovery-actions">
        <a href="@Url.Page("./TwoFactorAuthentication")" class="btn btn-primary">
            Return to Two-Factor Authentication
        </a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/manage/show-recovery-codes.js" asp-append-version="true"></script>
}