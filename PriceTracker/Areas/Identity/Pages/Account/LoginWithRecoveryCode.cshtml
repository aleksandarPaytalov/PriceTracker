@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Recovery code verification";
}


    <link rel="stylesheet" href="~/css/login-with-recovery-code.css" asp-append-version="true" />


<div class="auth-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="auth-card">

                    <!-- Beautiful Header -->
                    <div class="auth-header">
                        <div class="auth-icon">🔑</div>
                        <h2 class="mb-0">Recovery Code Access</h2>
                        <p class="mb-0 mt-2 opacity-75">Enter your backup recovery code to sign in</p>
                    </div>

                    <!-- Form Body -->
                    <div class="p-4">
                        <!-- Information Notice -->
                        <div class="info-notice">
                            <div class="notice-icon">ℹ️</div>
                            <div class="notice-content">
                                <p class="mb-2">
                                    <strong>Using a recovery code?</strong>
                                </p>
                                <p class="mb-0">
                                    This login will not be remembered until you use your authenticator app again or disable 2FA.
                                </p>
                            </div>
                        </div>

                        <!-- Recovery Code Form -->
                        <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                            <!-- Recovery Code Input -->
                            <!-- Обнови input полето в LoginWithRecoveryCode.cshtml: -->
                            <!-- Recovery Code Input -->
                            <div class="mb-4">
                                <label asp-for="Input.RecoveryCode" class="form-label fw-semibold">
                                    <i class="bi bi-key-fill me-2"></i>Recovery Code
                                </label>
                                <input asp-for="Input.RecoveryCode"
                                       class="form-control recovery-input"
                                       type="text"
                                       autocomplete="off"
                                       placeholder="XXXXX-XXXXX"
                                       maxlength="11"
                                       pattern="[A-Z0-9]{5}-[A-Z0-9]{5}" />
                                <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
                                <div class="form-text mt-2">
                                    <small class="text-muted">
                                        <i class="bi bi-info-circle me-1"></i>
                                    </small>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <button type="submit" class="btn btn-auth w-100 text-white">
                                <i class="bi bi-unlock me-2"></i>
                                Sign In with Recovery Code
                            </button>
                        </form>

                        <!-- Alternative Link -->
                        <div class="text-center mt-4">
                            <p class="mb-2">Got your phone back?</p>
                            <a asp-page="./LoginWith2fa"
                               asp-route-returnUrl="@Model.ReturnUrl"
                               class="text-decoration-none">
                                <i class="bi bi-phone me-1"></i>
                                Use authenticator app instead
                            </a>
                        </div>

                        <!-- Security Notice -->
                        <div class="alert alert-warning mt-4" role="alert">
                            <i class="bi bi-shield-exclamation me-2"></i>
                            <strong>Security Reminder:</strong> Each recovery code can only be used once. Keep your remaining codes safe.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/login-with-recovery-code.js" asp-append-version="true"></script>
}